{
return cilk::run(initArray, threeDimSpace, xD, yD,zD);
}
extern "C++" bool cleanArray_CPP(float ***& threeDimSpace, int xD, int yD, int zD)
{
return cilk::run(cleanArray, threeDimSpace, xD, yD, zD);
}

