extern "C++" void computeStencil_CPP(float ***& threeDimSpace, float c0, float c1, float c2, float c3, int tf, int xD, int yD, int zD)
{
cilk::run(computeStencil, threeDimSpace, c0, c1, c2, c3, tf, xD, yD, zD);
return;
}

